{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "no-unused-vars": "warn",
    "no-undef": "warn"
  },
  "overrides": [
    {
      "files": ["server/**/*.js", "send-email.js"],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["service-worker.js"],
      "rules": {
        "no-console": "off"
      }
    }
  ],
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "public/",
    "lib/",
    "web-sdk-version-3.2.0.0/",
    "assets/js/*.min.js",
    "assets/js/face-api.min.js",
    "assets/js/opencv.js",
    "assets/js/tesseract.min.js",
    "assets/js/jspdf.umd.min.js"
  ]
}
